<view class="tab">
  <image class="logo" src="../../images/logo.png" />
  <view class="addWrapper">
    <image class="add" src="../../images/add.png" bindtap='selectExternal' />
  </view>
</view>
<view class="cu-list">
  <view class="cu-item" wx:for="{{users}}" bindtap='toDetail' data-item="{{item}}">
    <view class="cu-avatar">
      <image src="{{item.avatar}}" />
    </view>
    <view class="content">
      <view class="name">
        <text class="text-cut">{{item.name}}</text>
      </view>
      <view wx:if="{{item.bind}}">
        <text class="notbinded">已完成绑定 {{item.cdbId}}</text>
      </view>
      <view wx:else>
        <text class="binded">等待绑定</text>
      </view>
    </view>
    <view class="rightInfo">
      <view class='date'>{{item.bindDate}}</view>
      <view class="arrow">
        <image wx:if="{{item.bind==false}}" src="../../images/arrow.png" />
      </view>
    </view>
  </view>
</view>