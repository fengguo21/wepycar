.content .bindedName {
  font-family: PingFangSC-Medium;
  font-weight: 500;
  color: rgba(64, 64, 64, 1);
  line-height: 30px;
  font-size: 22px;
}

.content .bindedinfo {
  font-size: 14px;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(191, 191, 191, 1);
  line-height: 18px;
  display: flex;
  margin: 20px 0;
}

.greeting.indexpage {
  width: 470px;
  height: 146px;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
}

.greeting .header {
  font-size: 20px;
  font-family: PingFangSC-Semibold;
  font-weight: 600;
  color: rgba(163, 0, 0, 1);
  line-height: 28px;
  margin-bottom: 20px;
}

.greeting .tips {
  font-size: 14px;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(24, 24, 24, 1);
  line-height: 20px;
}

.bottomBtns {
  display: flex;
  margin-top: 20px;
  width: 470px;
  justify-content: space-around;
}

.bottomBtns button {
  width: 178px;
  height: 44px;
  border-radius: 1px;
  border: 1px solid rgba(165, 1, 0, 1);
  background: white;
  font-size: 16px;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(0, 0, 0, 1);
  line-height: 44px;
  margin-top: 30px;
}

.bottomBtns .confirm {
  background: #a50100;
  color: white;
}

/* pages/detail/detail.wxss */

.infoItem {
  margin: 15px;
}

.infoItem .title {
  font-size: 14px;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(0, 0, 0, 1);
  line-height: 20px;
}

.infoItem .value {
  height: 44px;
  background: rgba(254, 251, 254, 1);
  font-size: 14px;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(0, 0, 0, 1);
  line-height: 44px;
  text-indent: 0.5em;
}

.checkcdb {
  margin-top: 145px;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.checkcdb .titleWrapper .title {
  font-size: 22px;
  font-family: PingFangSC-Medium;
  font-weight: 500;
  color: rgba(0, 0, 0, 1);
  line-height: 30px;
}

.checkcdb .inputWrapper input {
  font-size: 14px;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(181, 181, 181, 1);
  line-height: 20px;
  text-align: center;
  width: 480rpx;
  height: 44px;
  background: rgba(254, 251, 254, 1);
  border-radius: 4px;
  margin-bottom: 38px;
  margin-top: 10px;
}

.cu-btn {
  width: 480rpx;
  height: 48px;
  background: rgba(165, 1, 0, 1);
  border-radius: 4px;
  font-size: 16px;
  font-family: SFNSText;
  color: rgba(255, 255, 255, 1);
  line-height: 48px;
}

.handle {
  position: absolute;
  bottom: 16px;
  display: flex;
  justify-content: space-between;
  width: 100%;
}

.handle .reCheck {
  margin-left: 15px;
  width: 47%;
  height: 44px;
  border-radius: 1px;
  border: 1px solid rgba(165, 1, 0, 1);
  font-size: 16px;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(0, 0, 0, 1);
  line-height: 44px;
  text-align: center;
}

.handle .bind {
  width: 47%;
  height: 44px;
  border-radius: 1px;
  font-size: 16px;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  line-height: 44px;
  text-align: center;
  background: rgba(165, 1, 0, 1);
  border: 1px solid rgba(165, 1, 0, 1);
  color: white;
  margin-right: 15px;
}

