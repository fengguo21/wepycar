/* pages/binded/binded.wxss */
page{
  height: 100%;
}
.contentSuccess {
   display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100%;
  margin-top:-50px;
  
  
}

.contentSuccess .avatar {
  
  margin-bottom: 27px;
  width: 100px;
  height: 100px;
  border-radius: 4px;
}

.contentSuccess .name {
  font-size: 22px;
  font-family: PingFangSC-Medium;
  font-weight: 500;
  color: rgba(0, 0, 0, 1);
  line-height: 30px;
}

.contentSuccess .title {
  font-size: 22px;
  font-family: PingFangSC-Semibold;
  font-weight: 600;
  color: rgba(163, 0, 0, 1);
  line-height: 30px;
  margin-top: 32px;
}



.send {
  width: 320px;
  height: 44px;
  background: rgba(165, 1, 0, 1);
  border-radius: 1px;
  font-size: 15px;
  font-family: SFNSText;
  color: rgba(255, 255, 255, 1);
  line-height: 44px;
}

.tips {
  font-size: 13px;
  font-family: AppleSystemUIFont;
  color: rgba(181, 181, 181, 1);
  line-height: 16px;
  margin-top: 15px;
}





.contentSuccess .bindedinfo {
 font-size: 14px;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(24, 24, 24, 1);
  line-height: 20px;
  display: flex;
  margin: 30px 0;
}


