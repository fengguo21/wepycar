<cu-custom bgColor="bg-gradual-pink" isBack="{{true}}">
  <view slot="content">绑定成功</view>
</cu-custom>
<view class="padding flex flex-direction">


  <view class="flex-sub text-center">
    <view class="padding">

      <view class="cu-avatar xl round margin-left" style="background-image:url({{customer.avatar}});"></view>
      <view class="flex-sub text-center">
        <view class=" text-lg padding">
          <text class="text-black">{{customer.name}}</text>

        </view>
        <text class="text-red text-xl text-bold">顾客{{customer.name}}已绑定成功！</text>
      </view>
    </view>


  </view>

  <view class="flex-sub ">
      <view class="text-lg  text-left">
        <text class="text-black">欢迎消息：</text>

      </view>
       <view class=" text-df padding text-left">{{greeting}}</view>
     
    </view>
    <view class="padding flex flex-direction">

  
  <button class="cu-btn bg-pink lg" bindtap='sendGreeting'>复制并发送欢迎消息</button>
  
      <view class=" text-xs text-center padding">
        <text class="text-gray">点击长按即可复制消息，在聊天框内长按粘贴发送</text>
      </view>
      
    
  
</view>

</view>