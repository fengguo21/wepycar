/* pages/input-cdb/input-cdb.wxss */
.cu-item{
  margin:0;
  padding:0 16px;
  height:74px;
  margin-bottom:5px;
}
.cu-item .cu-avatar image{
  height:50px;
  width:50px;
}
.infoItem {
  margin: 15px;
}

.infoItem .title {
  font-size: 14px;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(0, 0, 0, 1);
  line-height: 20px;
}

.infoItem .value {
  height: 44px;
  background: rgba(254, 251, 254, 1);
  font-size: 14px;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(0, 0, 0, 1);
  line-height: 44px;
  text-indent: 0.5em;
}

.handle {
  position: absolute;
  bottom: 16px;
  display: flex;
  justify-content: space-between;
  width: 100%;
}

.handle .reCheck {
  margin-left: 15px;
  width: 47%;
  height: 44px;
  border-radius: 1px;
  border: 1px solid rgba(165, 1, 0, 1);
  font-size: 16px;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(0, 0, 0, 1);
  line-height: 44px;
  text-align: center;
}

.handle .bind {
  width: 47%;
  height: 44px;
  border-radius: 1px;
  font-size: 16px;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  line-height: 44px;
  text-align: center;
  background: rgba(165, 1, 0, 1);
  border: 1px solid rgba(165, 1, 0, 1);
  color: white;
  margin-right: 15px;
}
